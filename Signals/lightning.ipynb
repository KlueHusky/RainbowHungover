   "source": [
    "import cv2\n",
    "import numpy as np\n",
    "video = cv2.VideoCapture('lightning.mp4')\n",
    "\n",
    "means = []\n",
    "\n",
    "while video.isOpened():\n",
    "    ret, frame = video.read()\n",
    "\n",
    "    if ret:\n",
    "        means.append(np.mean(frame))\n",
    "\n",
    "    else:\n",
    "        break\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 11,
   "metadata": {},
   "outputs": [],
   "source": [
    "np.savetxt('lightning.csv', means)"
   ]
  }
